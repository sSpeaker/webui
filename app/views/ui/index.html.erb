<script>

$(document).ready(function() {
        $('a.link').click(function() {
$('a.link').css('background-color', '#FFFFFF');
                $(this).css('background-color', '#EBA521');
                return false;
        });
});

function MyFunction(link){
$("a.mylink").attr("href", link);
}

</script>

<div style="height:500px;width:120px;border:1px solid #ccc;font:16px/26px Georgia, Garamond, Serif;overflow:auto;">

<% Dir.chdir(@yamls_dir)%>
<% Dir['*.yaml'].sort.each do |file| %>
<a href="#" class="link" OnClick="MyFunction('<%= file %>');"><%= file %></a><br>
<% end %>
</div>
